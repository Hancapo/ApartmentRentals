<Page xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  x:Class="DepartamentoApp.Apartment.ListApartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DepartamentoApp.Apartment"
      mc:Ignorable="d" 
      d:DesignHeight="680" d:DesignWidth="1280"
      Title="ListApartmentPage" Loaded="Page_Loaded">

    <Grid>
        <ListView x:Name="ListaDepartamentos" ScrollViewer.CanContentScroll="false" Height="500" Width="850" HorizontalAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card>
                        <StackPanel Orientation="Vertical">
                            <Label Content="{Binding TituloDepartamento}" HorizontalAlignment="Left" Margin="50,20,0,0" FontSize="20" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="750">
                                <Image Source="/blurry.png" Height="40" HorizontalAlignment="Left" Margin="20,20,20,20" Stretch="Fill"/>
                                <TextBlock Width="600" Text="{Binding DescripcionDep}" Margin="0,20,20,20" TextAlignment="Center" TextWrapping="WrapWithOverflow" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Width="Auto" Height="40" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center">
                                <Label Content="{Binding ComunaDep}" Margin="20,0,20,0" FontWeight="Bold"/>
                                <Label Content="{Binding DireccionDep}" Margin="20,0,20,0" FontWeight="Bold"/>
                                <Label Content="{Binding TarifaDep}" Margin="20,0,20,0" FontWeight="Bold"/>
                                <Button Content="Entrar" Margin="0,-15,0,0" Foreground="White" x:Name="BtnDepartmentEnter" Click="BtnDepartmentEnter_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </DataTemplate>
            </ListView.ItemTemplate>
            


        </ListView>
    </Grid>
</Page>
